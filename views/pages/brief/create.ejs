<% layout('../../index') -%>

<style>
  #dropbox {
    height: 350px;
    width: 50%;
    margin: 20px auto;
    border: 2px dashed #ccc;
    border-radius: 20px;
  }

  /* #fileSelector {
    display: none;
} */

  #dropbox.highlight {
    border-color: purple;
  }

  #preview img {
    width: 100%;
    height: 350px;
    object-fit: cover;
    margin-bottom: 10px;
    margin-right: 10px;
    vertical-align: middle;
  }

  button {
    background-color: #e67e22;
    border: 2px solid #cf6d17;
    color: #fff;
    font-size: 15px;
  }
</style>
<p>You can enter the image URL here <input type="text" id="imgUrl" name="imgUrl" /></p>
<button type="button" onclick="previews.laodImageFromUrl()">Confirm</button>
<form class="upload" enctype="multipart/form-data" method="POST" action="/brief/upload">
  <div id="dropbox">
    <input id="fileSelector" type="file" name="files" onchange="previews.handleFiles(this.files)" />
    <div id="preview">
      <p>Or you can drag and drop a image here</p>
    </div>
  </div>
  <input type="text" name="title" />
  <textarea id="summernote" name="editordata"></textarea>
  <input type="submit" />
</form>
